@{
    ViewData["Title"] = "Products List";
}


@* @model List<Product> *@
@model PaginationResult<Product>




<div class="container mt-4">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2 class="mb-0">Products List</h2>
        </div>

        @if (User.IsInRole(SD.Role_Admin))
        {
            <div class="col-md-6 text-end">
                <a asp-controller="Product" asp-action="Add" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add Product
                </a>
            </div>
        }
    </div>

    <form method="get" asp-action="Index" asp-controller="Product" class="mb-3">
        <div class="input-group">
            <input type="text" class="form-control"
                   placeholder="Search products..."
                   name="search"
                   value="@Context.Request.Query["search"]" />

            <select class="form-select" name="order">
                <option value="asc" selected="@("asc" == Context.Request.Query["order"])">Ascending</option>
                <option value="desc" selected="@("desc" == Context.Request.Query["order"])">Descending</option>
            </select>

            <button class="btn btn-primary" type="submit">
                Search
            </button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Thumbnail</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Price</th>
                    <th>Last Added</th>
                    <th>Last Removed</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product productItem in Model.Items)
                {
                    var lastAdded = productItem.LastAdded.HasValue
                    ? TimeZoneInfo.ConvertTimeFromUtc(productItem.LastAdded.Value, TimeZoneInfo.FindSystemTimeZoneById("India Standard Time")).ToString("dd-MMM-yyyy hh:mm tt")
                    : "";

                    var lastRemoved = productItem.LastRemoved.HasValue
                    ? TimeZoneInfo.ConvertTimeFromUtc(productItem.LastRemoved.Value, TimeZoneInfo.FindSystemTimeZoneById("India Standard Time")).ToString("dd-MMM-yyyy hh:mm tt")
                    : "";

                    <tr>
                        <td>@productItem.Id</td>
                        <td>
                            <img src="@(string.IsNullOrEmpty(productItem.ImageUrl) ? Url.Content("~/images/product/default.jpg") : Url.Content(productItem.ImageUrl))"
                                 alt="@productItem.Name"
                                 class="img-thumbnail"
                                 style="width: 50px; height: 50px; object-fit: cover;">
                        </td>
                        <td>@productItem.Name</td>
                        <td>@productItem.Category.Name</td>
                        <td>@productItem.Stock</td>
                        <td>@productItem.Price</td>
                        <td>@lastAdded</td>
                        <td>@lastRemoved</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2 flex-wrap">
                                <a class="btn btn-primary btn-sm"
                                   asp-route-id="@productItem.Id"
                                   data-bs-toggle="modal"
                                   data-bs-target="#updateStockModal"
                                   data-bs-productName="@productItem.Name"
                                   data-bs-currentStock="@productItem.Stock"
                                   data-bs-productId="@productItem.Id">
                                    <i class="bi bi-arrow-down-up me-1"></i> Update Stock
                                </a>

                                @if (User.IsInRole(SD.Role_Admin))
                                {
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@productItem.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil me-1"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@productItem.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash3 me-1"></i> Delete
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


        <div class="d-flex justify-content-between align-items-center mt-3">

            <!-- Showing X–Y of Z -->
            <div class="text-muted">
                @{
                    int start = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
                    int end = start + Model.Items.Count - 1;
                    if (Model.TotalItems == 0)
                    {
                        start = 0;
                        end = 0;
                    }
                }

                Showing @start–@end of @Model.TotalItems items
            </div>

        </div>




        <div class="d-flex justify-content-center mt-4">

            <nav>
                <ul class="pagination">

                    <!-- Previous -->
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-search="@Context.Request.Query["search"]"
                           asp-route-order="@Context.Request.Query["order"]"
                           asp-route-page="@(Model.CurrentPage - 1)"
                           @* asp-route-pageSize="@Model.PageSize" *@
                        >
                            Previous
                        </a>
                    </li>

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-search="@Context.Request.Query["search"]"
                               asp-route-order="@Context.Request.Query["order"]"
                               asp-route-page="@i"
                               @* asp-route-pageSize="@Model.PageSize" *@
                            >
                                @i
                            </a>
                        </li>
                    }

                    <!-- Next -->
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-search="@Context.Request.Query["search"]"
                           asp-route-order="@Context.Request.Query["order"]"
                           asp-route-page="@(Model.CurrentPage + 1)"
                           @* asp-route-pageSize="@Model.PageSize" *@
                        >
                            Next
                        </a>
                    </li>

                </ul>
            </nav>

        </div>


    </div>
</div>




<partial name="_bsProductModal" />


