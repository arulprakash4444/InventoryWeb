@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inactive Tab</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <script>
        (function() {
            const getStoredTheme = () => localStorage.getItem('theme');
            const getPreferredTheme = () => {
                const storedTheme = getStoredTheme();
                if (storedTheme) return storedTheme;
                return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            };
            document.documentElement.setAttribute('data-bs-theme', getPreferredTheme());
        })();
    </script>
</head>

<body class="d-flex justify-content-center align-items-center min-vh-100 bg-body-tertiary">

    <div class="card bg-body shadow-sm p-4 border-0" style="max-width: 450px; width: 90%;">
        <div class="card-body text-center">

            <div class="mb-3">
                <i class="bi bi-pause-circle-fill text-danger display-1"></i>
            </div>

            <h2 class="card-title text-danger mb-3 fw-bold">This tab is inactive</h2>

            <p class="card-text text-body-secondary">
                Another tab is currently using the application. <br>
                If you believe no other tabs are open please click back, to resume.
            </p>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
