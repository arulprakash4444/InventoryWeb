    <script>
        (function () {
            const KEY = "single_active_tab";
            const tabId = crypto.randomUUID();
            const myStamp = Date.now();

            // Save this tab's identity in sessionStorage
            sessionStorage.setItem(KEY, tabId);

            // Write active tab info to localStorage
            localStorage.setItem(KEY, JSON.stringify({
                tabId: tabId,
                timestamp: myStamp
            }));

            let blocked = false;

            function freezeTab() {
                if (blocked) return;
                blocked = true;
                window.location.href = "/Home/BlockedTab";
            }

            window.addEventListener("storage", function (event) {
                if (event.key !== KEY) return;

                let data;
                try {
                    data = JSON.parse(event.newValue);
                } catch {
                    return;
                }

                if (!data) return;

                const otherTab = data.tabId;

                // If another tab became active - block this one
                if (otherTab !== tabId) {
                    freezeTab();
                }
            });
        })();
    </script>


    <script>
                  const inputs = document.getElementsByClassName("mobileInput");

        Array.from(inputs).forEach(input => {
            input.addEventListener("input", function () {
                this.value = this.value.replace(/\D/g, "").slice(0, 10);
            });

            input.addEventListener("keypress", function (e) {
                if (!/[0-9]/.test(e.key) || this.value.length >= 10) {
                    e.preventDefault();
                }
            });
        });
    </script>

    

