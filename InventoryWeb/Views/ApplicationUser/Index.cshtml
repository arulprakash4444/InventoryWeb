@model IEnumerable<ApplicationUserWithRole>

@{
    ViewData["Title"] = "Users List";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}


<div class="container mt-4">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2 class="mb-0">Users List</h2>
        </div>
        @if (User.IsInRole(SD.Role_Admin))
        {
            <div class="col-md-6 text-end">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Register New User
                </a>
            </div>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.UserName</td>
                        <td>@user.Name</td>
                        <td>@user.Role</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Address</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2 flex-wrap">

                                <a asp-controller="ApplicationUser" asp-action="EditPassword" asp-route-id="@user.UserId" class="btn btn-info btn-sm">
                                    <i class="bi bi-pencil me-1"></i> Edit Password
                                </a>

                                <a asp-controller="ApplicationUser" asp-action="EditRole" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil me-1"></i> Edit Role
                                </a>

                                @if (user.UserId != currentUserId)
                                {
                                    <a asp-controller="ApplicationUser" asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash3 me-1"></i> Delete
                                    </a>
                                }

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

