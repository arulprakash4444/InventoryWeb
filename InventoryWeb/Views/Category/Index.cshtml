@{
    ViewData["Title"] = "Categories List";
}

@model List<Category>

<div class="container mt-4">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2 class="mb-0">Categories List</h2>
        </div>
        @if (User.IsInRole(SD.Role_Admin))
        {
            <div class="col-md-6 text-end">
                <a asp-controller="Category" asp-action="Add" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add Category
                </a>
            </div>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class=" table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Category Name</th>
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <th scope="col" class="text-center">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var categoryItem in Model.OrderBy(i => i.Name))
                {
                    <tr>
                        <th scope="row">@categoryItem.Id</th>
                        <td>@categoryItem.Name</td>
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@categoryItem.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@categoryItem.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash3"></i> Delete
                                    </a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
